gccd() { ## git clone then cd. Defaults to --depth 1 clone, use -d for deeper
    clone() { gitfastclone "$@" }
    if [ $1 = -d ]; then
        shift
        clone() { git clone "$@" }
    fi
    clone "$@" || return
    local dir=`gitdirfromurl $1`
    if [ -d $dir ]; then
        echo "cd $dir"
        cd $dir
    else
        echo "Oops. I (gccd) guessed '$dir' from '$1', but that dir is absent."
        echo "(Either something happened with the clone or it was a bad guess)"
    fi
}
# vim:ft=sh
