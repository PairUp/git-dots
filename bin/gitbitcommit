#!/usr/bin/env ruby
# encoding: utf-8
## A nice process for committing per-file messages.
# TODO: Remove ruby dep (for impoverished sysems)
$VERBOSE = true
def run cmd
  puts cmd.join ' '
  if not system *cmd
    warn "This ‚òù abended. (hit ^c to stop or Enter to continue)"
    $stdin.readline
  end
end
run %w(git add .)
`git status --porcelain`.split("\n").each do |line|
    file = line.split(/\s+/)[-1]
    run [ 'git', 'commit', '-v', file ]
end
